<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.abc.iview">
    <!-- To access Google+ APIs: -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/unnamed"
        android:label="@string/app_name"
        android:roundIcon="@drawable/rounded_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:name=".Startup"
        android:hardwareAccelerated="true" >
        <activity android:name=".activities.PlayerActivity"
            android:parentActivityName=".activities.TVShowActivity"></activity>

        <activity
            android:name=".activities.TVShowActivity"

            android:label="TVShowActivity"
            android:launchMode="singleTask" />
        <activity
            android:name=".activities.ChannelActivity"
            android:label="@string/title_activity_channel" />
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>


        </activity>
    </application>

</manifest>